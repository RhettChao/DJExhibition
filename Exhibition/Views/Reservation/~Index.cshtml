@section Scripts {
    @*@Scripts.Render("index.js")*@
    <script type="text/javascript">
        $(document).ready(function () {
            $('.carousel').carousel({
                interval: 3000
            })

            $('#cbRead').click(function () {
                //alert($(this).parent().find(':checked').length);
                if ($('#cbRead:checked').length == 1)
                    $('#linkBegin').removeClass('disabled');
                else
                    $('#linkBegin').addClass('disabled');

            });
        });
    </script>
