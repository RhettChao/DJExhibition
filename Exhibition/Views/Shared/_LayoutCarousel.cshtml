    <script>
        $(document).ready(function () {
            $.ajax({
                url: '@Url.Content("~/Reservation/GetTouristInfo")',
                dataType: 'json',
                cache: false,
                type: 'POST'
            }).done(function (data) {
                $('.groups').text(data.groups);
                $('.tourists').text(data.tourists);
                $('.groups').fadeIn(800);
                $('.tourists').fadeIn(800);
            }).fail(function () {

            });
        });
